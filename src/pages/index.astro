        function createCard(body, category) {
            const card = document.createElement('div');
            card.className = 'card';
            card.innerHTML = `
                <div class="card-image">
                    <span class="card-tag">${category}</span>
                    <img src="${body.image}" alt="${body.name}" onerror="this.src='/images/venus.png'">
                </div>
                <div class="card-content">
                    <div class="card-title">${body.name}</div>
                    <div class="card-subtitle">${body.subtitle}</div>
                </div>
            `;
            
            card.addEventListener('click', (e) => {
                e.preventDefault();
                showDetailModal(body);
            });
            
            return card;
        }

        function showDetailModal(body) {
            document.getElementById('detail-view').style.display = 'block';
            document.getElementById('detail-title').textContent = body.name;
            document.getElementById('detail-subtitle').textContent = body.subtitle;
            document.getElementById('detail-image').src = body.image;
            document.getElementById('detail-info').textContent = body.info;
            
            const detailLink = document.getElementById('detail-link');
            detailLink.onclick = (e) => {
                e.preventDefault();
                window.location.href = `/${body.name.toLowerCase()}`;
            };
            
            document.body.style.overflow = 'hidden';
        }

        function closeDetailModal() {
            document.getElementById('detail-view').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        function renderCategories() {
            const planetsGrid = document.getElementById('planets-grid');
            const moonsGrid = document.getElementById('moons-grid');
            const asteroidsGrid = document.getElementById('asteroids-grid');

            spaceBodies.planets.forEach(planet => {
                planetsGrid.appendChild(createCard(planet, 'Planet'));
            });

            spaceBodies.moons.forEach(moon => {
                moonsGrid.appendChild(createCard(moon, 'Moon'));
            });

            spaceBodies.asteroids.forEach(asteroid => {
                asteroidsGrid.appendChild(createCard(asteroid, 'Asteroid'));
            });
        }

        document.getElementById('back-button').addEventListener('click', (e) => {
            e.preventDefault();
            closeDetailModal();
        });

        document.getElementById('detail-view').addEventListener('click', (e) => {
            if (e.target.id === 'detail-view') {
                closeDetailModal();
            }
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && document.getElementById('detail-view').style.display === 'block') {
                closeDetailModal();
            }
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    // Cerrar el menú móvil después de hacer clic en un enlace
                    const navLinks = document.getElementById('nav-links');
                    const hamburger = document.getElementById('hamburger');
                    navLinks.classList.remove('active');
                    hamburger.classList.remove('active');
                }
            });
        });

        // Funcionalidad del menú hamburguesa
        const hamburger = document.getElementById('hamburger');
        const navLinks = document.getElementById('nav-links');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            navLinks.classList.toggle('active');
        });

        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', (e) => {
            if (!hamburger.contains(e.target) && !navLinks.contains(e.target)) {
                navLinks.classList.remove('active');
                hamburger.classList.remove('active');
            }
        });

        renderCategories();
    </script>
